<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CreateCategoryFragment"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="top">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/currency"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/coin"
                    android:textColor="#529C90"
                    android:textSize="35dp" />

                <TextView
                    android:id="@+id/txtCurrency"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="386"
                    android:textColor="@color/gold"
                    android:textSize="25dp" />


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Create New Category"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"/>

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@android:color/black"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/txtProjectName"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:hint="Project name..."
            android:inputType="text"
            android:layout_marginBottom="14dp"
            android:text="" />

        <Button
            android:id="@+id/btnChooseColour"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/lightRed"
            android:text="Choose Colour"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:layout_marginBottom="14dp"/>

        <ImageView
            android:id="@+id/imgProjectImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            tools:src="@tools:sample/backgrounds/scenic"
            android:scaleType="centerCrop"
            android:layout_marginBottom="14dp"/>

        <Button
            android:id="@+id/btnUploadImg"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/lightGreen"
            android:text="Upload Image"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/icon_img"
            android:layout_marginBottom="14dp"/>

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/lightBlue"
            android:text="create category"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"/>

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@android:color/black"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>